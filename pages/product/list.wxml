<view class="weui-panel__bd">
  <navigator url='/pages/product/form' class="button-sp-area">
    <i-button type="success">+ 新增菜品</i-button>
  </navigator>
  
  <navigator style='margin-bottom: 15px' url="/pages/product/detail?productId={{ item.id }}" wx:for="{{products}}" wx:key="*this">
    <i-card title="{{ item.title }}" extra="¥ {{ item.price }}" thumb="{{ item.thumb }}">
        <view slot="content">{{ item.description }}</view>
        <view slot="footer">销量：{{ item.sales_volume }}   状态：{{ item.status_text }}</view>
    </i-card>
  </navigator>
</view>